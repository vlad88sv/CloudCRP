{% extends '::base.html.twig' %}

{% block page_sub_header %}Partidas{% endblock %}

{% block body %}
    <table id="tblCuentas" class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Código</th>
                <th>Fecha ingresada</th>
                <th>Fecha actualizada</th>
                <th>Activa</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            {% for row in data.partidas %}
                <tr>
                    <td style="width:100px">{{ row.codigo }}</td>
                    <td>{{ row.creado|date('h:ip, d-m-Y') }}</td>
                    <td>{{ row.actualizado|date('h:ip, d-m-Y') }}</td>
                    <td>
                        {% if (row.activo) %}
                            <span aria-hidden="true" class="glyphicon glyphicon-ok" style="cursor: pointer"></span>
                        {% else %}
                            <span aria-hidden="true" class="glyphicon glyphicon-remove" style="cursor: pointer"></span>
                        {% endif %}
                    </td>
                    <td><a href="{{ path('lcc_partida_edit', {'id' : row.id}) }}" aria-hidden="true" class="glyphicon glyphicon-edit" style="cursor: pointer"></a></td>
                </tr>    
            {% endfor %}
        </tbody>

    </table>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(function () {
            $("#tblCuentas").DataTable();
        });
    </script>
{% endblock %}