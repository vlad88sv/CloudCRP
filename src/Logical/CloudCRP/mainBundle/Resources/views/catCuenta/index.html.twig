                    <td>{{ row.cuentaAgrupacion }}</td>
                    <td>{{ row.creadoPor }}</td>
                    <td>{{ row.comentario }}</td>
                    <td><span aria-hidden="true" class="glyphicon glyphicon-edit" style="cursor: pointer"></span></td>
                </tr>    
            {% endfor %}
        </tbody>

    </table>

{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(function () {
            $("#tblCuentas").DataTable();
        });
    </script>
{% endblock %}