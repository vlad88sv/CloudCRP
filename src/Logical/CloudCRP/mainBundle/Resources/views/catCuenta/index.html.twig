{% extends '::base.html.twig' %}

{% block page_sub_header %}Cat치logo de cuentas{% endblock %}

{% block body %}
    <table id="tblCuentas" class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>C칩digo</th>
                <th>Nombre</th>
